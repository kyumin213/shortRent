/* pages/houseManage/houseStatus/houseStatus.wxss */

.houseStatus {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #f2f2f2;
}

.houseItems {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 40rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
  margin-top: 20rpx;
  line-height: 46rpx;
}

.DoorDetails {
  background: #fff;
  box-sizing: border-box;
}

.DoorDetails .houseItems {
  margin: 20rpx 40rpx 0 40rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 40rpx 0 20rpx 0;
}

.DoorDetails .hxDetails {
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  height: 80rpx;
  padding: 20rpx 40rpx 0 40rpx;
}

.DoorDetails .hxDetails text {
  margin-right: 30rpx;
}

.DoorDetails .hxDetails .inpDis {
  display: inline-block;
  width: 30rpx;
}

.houseItems .textOne {
  display: block;
  color: rgb(0, 177, 197);
  font-size: 32rpx;
}

.houseItems .textTwo, .houseItems .col {
  display: inline-block;
  text-align: right;
  font-size: 26rpx;
  color: rgb(0, 177, 197);
}

.houseItems .textTwo {
  padding-right: 10rpx;
}

.houseItems .houseRight {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.houseRight .txtCol {
  color: rgb(0, 177, 197);
}

.door-submit {
  position: fixed;
  bottom: 36rpx;
  left: 0;
  right: 0;
}

.door-submit .doorBtn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 44rpx;
  background-color: rgb(0, 177, 197);
  color: #fff;
  font-size: 36rpx;
  box-shadow: 0 16rpx 8rpx 2rpx rgba(37, 215, 204, 0.09);
}

.nums {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 90rpx;
}

.minus {
  display: inline-block;
  width: 30rpx;
  height: 4rpx;
  background: rgb(153, 153, 153);
  margin: 0 auto;
  margin-right: 40rpx;
}

.nums .plus {
  margin-left: 40rpx;
  width: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  /* background: rgb(0, 177, 197); *//* background: #ccc; *//* position: relative; */
}
.nums .minu{
  height: 46rpx;
  line-height: 46rpx; 
   margin-top:-14rpx; 
}

