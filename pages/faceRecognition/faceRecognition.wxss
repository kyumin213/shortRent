/* pages/faceRecognition/faceRecognition.wxss */

.head {
  width: 100%;
  height: 440rpx;
}

.head .head-bg {
  width: 100%;
  background-size: cover;
}

.faceTxt {
  position: absolute;
  text-align: center;
  top: 148rpx;
  left: 222rpx;
}

.faceTxt text {
  display: block;
  color: rgb(254, 254, 254);
  font-size: 28rpx;
  line-height: 60rpx;
}

.faceImg {
  width: 314rpx;
  height: 314rpx;
  position: relative;
  top: -157rpx;
  left: 50%;
  margin-left: -157rpx;
}

.faceImg .face {
  width: 100%;
}

.explain {
  font-size: 28rpx;
  width: 484rpx;
  margin: -80rpx auto 76rpx auto;
}

.explain .items {
  text-align: left;
  line-height: 48rpx;
  color: rgb(51, 51, 51);
}

.startBtn {
  width: 596rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 36rpx;
  border-radius: 44rpx;
  background: rgb(0, 177, 197);
  box-shadow: 0 16rpx 8rpx 2rpx rgba(37, 215, 204, 0.09);
}

.endTxt {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  margin-top: 28rpx;
}

/*开始识别  */

.txtOne {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  color: rgb(36, 36, 36);
  margin-top: 200rpx;
}

.head-con {
  width: 100%;
  text-align: center;
  margin-top: 62rpx;
  position: relative;
}

.camera {
  position: relative;
  top: 60rpx;
  left: 50%;
  display: inline-block;
  width: 448rpx;
  height: 448rpx;
  border-radius: 100%;
  margin-left: -224rpx;
  background: #fff;
}

.camera::after {
  position: absolute;
  content: '';
  background: linear-gradient(165deg,#08e2df 20%, #13c5ec 40%,#fff,#fff);
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  transform: scale(1.05);
  border-radius: 50%;
}

.camera-cen {
  position: absolute;
  left: 50%;
  top: 328rpx;
  display: inline-block;
  width: 414rpx;
  height: 414rpx;
  border-radius: 100%;
  /* border: 2rpx solid rgb(0, 177, 197); */
  background: #ccc;
  margin-left: -208rpx;
  overflow: hidden;
}

.faceshow {
  display: inline-block;
  width: 100%;
  height: 30%;
  background: rgba(51, 51, 51, 0.64);
  text-align: center;
  padding-top:40rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 36rpx;
}


@keyframes face {
  from {
    height: 414rpx;
    border-radius: 50%;
  }

  to {
    height: 207rpx;
    border-radius: 200rpx 200rpx 0 0;
  }
}
