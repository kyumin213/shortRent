/* pages/houseManage/twoCode/twoCode.wxss */

.bg-c {
  background: #edeeef;
}

.codeCenter {
  /* margin: 18rpx 28rpx 28rpx 28rpx;
   */
   margin: 16rpx auto 14rpx auto;
   width: 92%;
  background: #fff;
  border-radius: 10rpx;
  border: 4rpx solid #e5e5e5;
}

.codeCenter .codeHead {
  text-align: center;
}

.codeCenter .codeHead .houseName {
  font-size: 50rpx;
  padding: 36rpx 0 12rpx 0;
  font-weight: bold;
}

.codeCenter .codeHead .houseNo {
  font-size: 30rpx;
}

.codeCenter .ewm {
   width: 360rpx;
  /* height: 360rpx;  */
  margin: 0 auto;
}

.codeCenter .ewm .codeImg {
   width: 100%; 
  background-size: cover;
}

.sendCus {
  margin: 0 auto 66rpx auto;
  width: 596rpx;
  border-radius: 46rpx;
  border: 4rpx solid rgb(0, 177, 197);
  font-size: 36rpx;
  text-align: center;
  height: 94rpx;
  line-height: 94rpx;
  background: rgb(0, 177, 197);
  color: #fff;
  box-shadow: 0 16rpx 8rpx 2rpx rgba(37, 215, 204, 0.09);
}

.phone {
  background: #fff;
  width: 92%;
  margin: 0 auto;
  box-sizing: border-box;
  border-radius: 10rpx;
  border: 4rpx solid #e5e5e5;
}

.tel {
  height: 200rpx;
  width: 100%;
}

.tel .col {
  color: rgb(204, 204, 204);
  line-height: 36rpx;
  font-size: 28rpx;
}

.items {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 30rpx;
}

.phontTxt {
  font-size: 32rpx;
  margin-left: 20rpx;
}

.phontTxt .sl {
  margin-left: 8rpx;
  font-size: 26rpx;
  color: rgb(179, 179, 179);
}

.fillPhone {
  width: 100%;
  padding: 0 30rpx 30rpx 30rpx;
  font-size: 28rpx;
  word-break:break-all;
  box-sizing: border-box;
}

.itemLeft {
  width: 40rpx;
  height: 40rpx;
}

.writeIcon {
  width: 100%;
}

/*邀请码  */

.houseCode {
  width: 100%;
  text-align: center;
  margin: 66rpx auto 30rpx auto;
  font-size: 36rpx;
  font-weight: bold;
}
