/* pages/houseManage/houseStatus/houseStatus.wxss */

.houseStatus {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: #f2f2f2;
}

.houseItems {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 34rpx 40rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #fff;
  margin-top: 20rpx;
  line-height: 46rpx;
}

.DoorDetails{
  background: #fff;
  box-sizing: border-box;
}
.DoorDetails .houseItems{
  margin: 20rpx 40rpx 0 40rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 40rpx 0 20rpx 0;
}
.DoorDetails .hxDetails{
  font-size: 26rpx;
  color: rgb(153, 153, 153);
  height: 80rpx;
  padding: 20rpx 40rpx 0 40rpx;
}
.DoorDetails .hxDetails text{
  margin-right: 30rpx;
}
.DoorDetails .hxDetails .inpDis{
  display: inline-block;
  width: 30rpx;
}
.houseItems .textOne {
  display: block;
  color: rgb(0, 177, 197);
  font-size: 32rpx;
}

.houseItems .textTwo, .houseItems .col {
  display: inline-block;
  text-align: right;
  font-size: 26rpx;
  color: rgb(0, 177, 197);
}

.houseItems .textTwo {
  padding-right: 10rpx;
}


.houseItems .houseRight{
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.houseRight .txtCol{
  color: rgb(0, 177, 197);
}

.door-submit {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
}

.door-submit .doorBtn {
  width: 80%;
  height: 90rpx;
  border-radius: 44rpx;
  background-color: rgb(0, 177, 197);
  color: #fff;
  font-size: 36rpx;
}

.nums {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 90rpx;
}

.minus {
  display: inline-block;
  width: 30rpx;
  height: 4rpx;
  background: rgb(153, 153, 153);
  margin: 0 auto;
  margin-right: 40rpx;
}

.nums .plus {
  display: inline-block;
  margin-left: 40rpx;
  width: 30rpx;
  height: 4rpx;
  background: rgb(0, 177, 197);
  position: relative;
}

.nums .plus::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 30rpx;
  height: 4rpx;
  background: rgb(0, 177, 197);
  transform: rotate(90deg);
}

.nums .item {
  width: 80rpx;
  height: 100%;
  text-align: center;
}

.nums .num {
  width: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color: rgb(0, 177, 197);
}

.place {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.place .area {
  font-size: 36rpx;
}

.hoseRight {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}


.modal .showModal .items{
  margin-top: 0;
  padding-bottom: 0;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.modal .showModal .items:nth-child(2){
  border-bottom: 2rpx solid #ccc;
}
.modal .showModal .items:nth-child(6){
  border-bottom: 2rpx solid #ccc;
}
.items .doorNums{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 80rpx;
}
.items .doorNums .minu{
  display: inline-block;
  width: 26rpx;
  height: 2rpx;
  background: rgb(0, 157, 175);
  margin-right: 40rpx;
}
.items .doorNums .plus{
  width: 26rpx;
  height: 2rpx;
  background: rgb(0, 157, 175);
  margin-left: 40rpx;
  position: relative;
}
.items .doorNums .plus::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 26rpx;
  height: 4rpx;
  background: rgb(0, 157, 175);
  transform: rotate(90deg);

}
.items .doorNums .num{
  width: 50rpx;
  text-align: center;
  color: rgb(3, 180, 197);
  font-size: 36rpx;
}
.submit{
  margin-top: 0;
}