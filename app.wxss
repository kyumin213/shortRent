/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
button::after{
  border: none;
}


/*背景颜色  */
.bg-c {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgb(242, 242, 242);
  overflow-y: auto;
}
.color{
  color: rgb(102, 102, 102);
}

.fonzCol{
  color: rgb(0, 177, 197);
}
/*弹出框  */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
  overflow: hidden;
}

.modal .showModal{
  position: absolute;
  left: 7%;
  width: 86%;
  background: #fff;
  border-radius: 10rpx;
  margin: 20% auto;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 1000;
}
.modal .showModal .modalTitle{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 130rpx;
  border-bottom: 2rpx solid #ccc;
  font-size: 32rpx;
  color: rgb(102, 102, 102);
}
.modal .showModal .closeModal{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
.modal .showModal .modalTitle .close{
  display: inline-block;
  width: 40rpx;
  height: 4rpx;
  background: rgb(201, 201, 201);
  transform: rotate(-45deg);
  position: relative;
}
.modal .showModal .modalTitle .close::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: rgb(201, 201, 201);
  transform: rotate(90deg);
}
.modal .showModal .street{
  height: 80rpx;
  font-size: 30rpx;
}
.modal .showModal label{
  font-size: 32rpx;
  color: rgb(102, 102, 102);
}
.modal .showModal .items{
  margin-top: 32rpx;
  padding-bottom: 10rpx;
}
.modal .showModal .items:nth-child(3){
  border-bottom: 2rpx solid #ccc;
}
/*确定按钮  */
.submit{
  margin-top: 40rpx;
}
.submit .subBtn{
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  font-size: 32rpx;
  color: rgb(51, 51, 51);
}
.show{
  display: block;
}
.hidden{
  display: none;
}
/*完成图标  */
.complete {
  /* display: inline-block; */
  width: 26rpx;
  height: 26rpx;
  border-radius: 100%;
  background: linear-gradient(120deg,rgb(0,177,197) 0,rgb(30,209,198)100%);
  margin-left: 10rpx;
  margin-right: 10rpx;
  text-align: center;
  position: relative;
}

.complete .complete-icon {
  display: inline-block;
  position: absolute;
  left: 50%;
  top: 50%;
  width: 14rpx;
  height: 6rpx;
  border-left: 2rpx solid #fff;
  border-bottom: 2rpx solid #fff;
  transform: rotate(-45deg);
  margin-left: -6rpx;
  margin-top: -6rpx;
}
/*右箭头  */
.jt {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
  transition: ease-in-out 0.4s;
}