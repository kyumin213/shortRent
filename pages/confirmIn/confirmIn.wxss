/* pages/confirmIn/confirmIn.wxss */

.fz {
  font-size: 32rpx;
}

.bg-c {
  overflow-x: hidden;
}

.cusName {
  width: 100%;
  /* height: 132rpx; */
  background: #fff;
  padding: 32rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.cusName .NameValue {
  font-size: 26rpx;
  margin-top: 4rpx;
}

.inTimes {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
}

.checkInTime {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  height: 40rpx;
}

.inTimes .checkInTime:first-child {
  margin-bottom: 20rpx;
}

.checkInTime .fz-26 {
  display: inline-block;
  font-size: 26rpx;
  margin-right: 10rpx;
   text-align: right; 

}
.endTime{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 40rpx;
}
.week {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  padding: 38rpx 0;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgb(58, 58, 58);
  box-sizing: border-box;
}

.week .items {
  text-align: center;
  line-height: 66rpx;
  width: 66rpx;
  height: 66rpx;
}

.week .active {
  background: rgb(0, 177, 197);
  border-radius: 100%;
  color: #fff;
}

.weekSubmit {
  position: fixed;
  bottom: 66rpx;
  left: 0;
  width: 100%;
  text-align: center;
}

.weeksubBtn {
  width: 596rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  background: rgb(0, 177, 197);
  box-shadow: 0 16rpx 8rpx 2rpx rgba(37, 215, 204, 0.09);
  border-radius: 44rpx;
  font-size: 36rpx;
}
